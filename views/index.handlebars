<h2>All Burgers</h2>

<ul>
  {{#each burgers}}
      <li>
        {{this.burger_name}}
        {{#unless this.devoured}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">Devour It!</button>
          </form>
        {{/unless}}
      </li>
  {{/each}}
</ul>

<h2>Available Burgers</h2>

<ul>
  {{#each burgers}}
   {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <button type="submit">Devour It!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

